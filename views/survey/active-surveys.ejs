<%- include('../partials/header'); %>

<%- include('../partials/nav'); %>

<!-- Active Surveys Section -->
<main>
    <table class="active-surveys">
        <thead>
            <tr>
                <th>Author</th>
                <th>Survey Name</th>
                <th>Start Date</th>
                <th>Closing Date</th>
                <th>View Questions</th>
                <th><a href="create-survey"><button class="survey-button"><i class="fa-solid fa-plus"></i> Add</button></a></th>
            </tr>
        </thead>

        <tbody>
        <% for(let count = 0; count < surveyList.length; count++) { %>
            <tr>
                <td><% surveyList[count].author %></td>
                <td><% surveyList[count].surveyName %></td>
                <td><% surveyList[count].startDate %></td>
                <td><% surveyList[count].closeDate %></td>
                <td><a class="survey-button" href="/survey/<%= surveyList[count]._id%>">View</a></td>
                <td>
                    <button class="survey-button"><i class="fa-solid fa-pencil"></i></button>
                    <button class="survey-button"><i class="fa-solid fa-trash"></i></button>
                </td>
            </tr>
        <% } %>
        </tbody>

    </table>
</main>

<%- include('../partials/footer'); %>

